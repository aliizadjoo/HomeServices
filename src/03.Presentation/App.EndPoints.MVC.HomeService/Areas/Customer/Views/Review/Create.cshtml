@using App.EndPoints.MVC.HomeService.Areas.Customer.Models
@model CreateReviewViewModel

@{
    ViewData["Title"] = "ثبت نظر";
}

<link rel="stylesheet" href="~/css/review-stars.css" />

<div class="container py-5" dir="rtl">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm border-0 rounded-4 mb-4" role="alert">
            <i class="bi bi-check-circle-fill ms-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close shadow-none" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm border-0 rounded-4 mb-4" role="alert">
            <i class="bi bi-exclamation-triangle-fill ms-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close shadow-none" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">ثبت نظر</h5>
                </div>

                <div class="card-body">
                    <form asp-action="Create" method="post">

                        <input asp-for="OrderId" type="hidden" />

                       
                        <div class="mb-3">
                            <label class="form-label d-block">امتیاز شما</label>

                            <div class="star-rating">
                                <input asp-for="Score" type="radio" value="5" id="star5" />
                                <label for="star5">★</label>

                                <input asp-for="Score" type="radio" value="4" id="star4" />
                                <label for="star4">★</label>

                                <input asp-for="Score" type="radio" value="3" id="star3" />
                                <label for="star3">★</label>

                                <input asp-for="Score" type="radio" value="2" id="star2" />
                                <label for="star2">★</label>

                                <input asp-for="Score" type="radio" value="1" id="star1" />
                                <label for="star1">★</label>
                            </div>

                            <span asp-validation-for="Score" class="text-danger"></span>
                        </div>

                     
                        <div class="mb-3">
                            <label class="form-label">نظر شما</label>
                            <textarea asp-for="Comment"
                                      class="form-control"
                                      rows="4"
                                      placeholder="نظر خود را بنویسید..."></textarea>
                            <span asp-validation-for="Comment" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-success w-100">
                            ثبت نظر
                        </button>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
