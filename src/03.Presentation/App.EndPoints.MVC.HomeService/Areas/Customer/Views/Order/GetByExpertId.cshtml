@using App.Domain.Core.Dtos.OrderAgg
@using App.Domain.Core.Dtos.ReviewAgg
@model ReviewPagedDto

@{
    ViewData["Title"] = "نظرات کارشناس";
    int currentPage = ViewBag.CurrentPage;
    int totalPages = ViewBag.TotalPages;
    int expertId = ViewBag.ExpertId;
}

<div class="container py-5" dir="rtl">

   
    <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-3">
        <h4 class="fw-bold text-primary"><i class="bi bi-chat-quote ms-2"></i>نظرات ثبت شده</h4>
        <span class="badge bg-dark rounded-pill">تعداد کل: @Model.TotalCount</span>
    </div>

    @if (!Model.ReviewDtos.Any())
    {
        <div class="alert alert-info text-center py-5 shadow-sm border-0 rounded-4">
            <i class="bi bi-info-circle fs-1 d-block mb-3"></i>
            <p class="mb-0">هیچ نظری برای این کارشناس در سیستم یافت نشد.</p>
        </div>
    }

    @foreach (var review in Model.ReviewDtos)
    {
        <div class="card shadow-sm mb-4 border-0 rounded-4 overflow-hidden">
            <div class="row g-0">
               
           

               
                <div class="col-md-9 d-flex flex-column">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div>
                                <h5 class="fw-bold text-dark mb-1">
                                    @review.CustomerFirstName @review.CustomerLastName
                                </h5>
                                <small class="text-muted">
                                    <i class="bi bi-calendar3 me-1"></i> @review.CreatedAtShamsi
                                </small>
                            </div>
                           
                            <div class="text-start">
                                <span class="badge bg-success rounded-pill fs-6 px-3 py-2">
                                    <i class="bi bi-star-fill me-1"></i> @review.Score
                                </span>
                            </div>
                        </div>

                        <p class="text-secondary mb-0" style="text-align: justify; line-height: 1.7;">
                            @review.Comment
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }


    @if (totalPages > 1)
    {
        <nav class="mt-5">
            <ul class="pagination justify-content-center shadow-sm">
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link" asp-action="GetByExpertId" asp-route-expertId="@expertId" asp-route-pageNumber="@(currentPage - 1)">قبلی</a>
                </li>
                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(currentPage == i ? "active" : "")">
                        <a class="page-link" asp-action="GetByExpertId" asp-route-expertId="@expertId" asp-route-pageNumber="@i">@i</a>
                    </li>
                }
                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link" asp-action="GetByExpertId" asp-route-expertId="@expertId" asp-route-pageNumber="@(currentPage + 1)">بعدی</a>
                </li>
            </ul>
        </nav>
    }
</div>