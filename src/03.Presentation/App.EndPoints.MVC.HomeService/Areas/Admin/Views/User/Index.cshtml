@using App.EndPoints.MVC.HomeService.Areas.Admin.Models
@model UserManagementViewModel

@{
    ViewData["Title"] = "مدیریت کاربران";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["SuccessMessage"]
        <button class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["ErrorMessage"]
        <button class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="container-fluid mt-4" dir="rtl">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-success fw-bold">
            <i class="bi bi-people-fill"></i> مدیریت جامع کاربران
        </h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> افزودن کاربر جدید
        </a>
    </div>


    <ul class="nav nav-tabs border-success">
        <li class="nav-item">
            <a class="nav-link @(Model.ActiveTab == "customers" ? "active bg-success text-white" : "text-success")"
               href="?activeTab=customers">
                مشتریان
                <span class="badge bg-light text-success">@Model.CustomerTotalCount</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(Model.ActiveTab == "experts" ? "active bg-success text-white" : "text-success")"
               href="?activeTab=experts">
                کارشناسان
                <span class="badge bg-light text-success">@Model.ExpertTotalCount</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(Model.ActiveTab == "admins" ? "active bg-success text-white" : "text-success")"
               href="?activeTab=admins">
                مدیران
                <span class="badge bg-light text-success">@Model.AdminTotalCount</span>
            </a>
        </li>
    </ul>

    <div class="tab-content border border-top-0 p-4 bg-white shadow-sm rounded-bottom">

     
        @if (Model.ActiveTab == "customers")
        {
            int totalPages = (int)Math.Ceiling((double)Model.CustomerTotalCount / Model.PageSize);

            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>نام و نام خانوادگی</th>
                            <th>شماره موبایل</th>
                            <th>ایمیل</th>
                            <th>موجودی</th>
                            <th>تاریخ ثبت</th>
                            <th class="text-center">عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in Model.Customers)
                        {
                            <tr>
                                <td>@c.FirstName @c.LastName</td>
                                <td class="fw-bold">@c.PhoneNumber</td>
                                <td>@c.Email</td>
                                <td>@(c.WalletBalance?.ToString("N0") ?? "0") ریال</td>
                                <td>@c.CreatedAt.ToString("yyyy-MM-dd")</td>
                                <td class="text-center">
                                    <a asp-action="UpdateCustomer"
                                       asp-route-id="@c.CustomerId"
                                       asp-route-appUserId="@c.AppUserId"
                                       class="btn btn-sm btn-outline-primary">ویرایش</a>

                                    <a asp-action="ChangePassword"
                                       asp-route-appUserId="@c.AppUserId"
                                       class="btn btn-sm btn-outline-warning">تغییر رمز</a>

                                    <form asp-action="Delete"
                                          asp-route-id="@c.CustomerId"
                                          asp-route-appUserId="@c.AppUserId"
                                          method="post"
                                          class="d-inline"
                                          onsubmit="return confirm('حذف انجام شود؟');">
                                        <button class="btn btn-sm btn-outline-danger">حذف</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @await Html.PartialAsync("_PaginationPartial", null, new ViewDataDictionary(ViewData)
            {
            ["TotalPages"] = totalPages,
                ["CurrentPage"] = Model.CustomerPage,
                ["ParamName"] = "cPageNumber",
                ["Others"] = "&activeTab=customers"
                })
                }

        @if (Model.ActiveTab == "experts")
        {
            int totalPages = (int)Math.Ceiling((double)Model.ExpertTotalCount / Model.PageSize);

            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>نام</th>
                            <th>شماره موبایل</th>
                            <th>امتیاز</th>
                            <th>تخصص‌ها</th>
                            <th>تاریخ</th>
                            <th class="text-center">عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var e in Model.Experts)
                        {
                            <tr>
                                <td>@e.FirstName @e.LastName</td>
                                <td class="fw-bold">@e.PhoneNumber</td>
                                <td>@e.AverageScore?.ToString("F1")</td>
                                <td>@string.Join(" | ", e.ServiceNames)</td>
                                <td>@e.CreatedAt.ToString("yyyy-MM-dd")</td>
                                <td class="text-center">
                                    <a asp-action="UpdateExpert"
                                       asp-route-id="@e.ExpertId"
                                       asp-route-appUserId="@e.AppUserId"
                                       class="btn btn-sm btn-outline-primary">ویرایش</a>

                                    <a asp-action="ChangePassword"
                                       asp-route-appUserId="@e.AppUserId"
                                       class="btn btn-sm btn-outline-warning">تغییر رمز</a>

                                    <form asp-action="DeleteExpert"
                                          asp-route-id="@e.ExpertId"
                                          asp-route-appUserId="@e.AppUserId"
                                          method="post"
                                          class="d-inline"
                                          onsubmit="return confirm('حذف انجام شود؟');">
                                        <button class="btn btn-sm btn-outline-danger">حذف</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @await Html.PartialAsync("_PaginationPartial", null, new ViewDataDictionary(ViewData)
            {
            ["TotalPages"] = totalPages,
                ["CurrentPage"] = Model.ExpertPage,
                ["ParamName"] = "ePageNumber",
                ["Others"] = "&activeTab=experts"
                })
                }

        
        @if (Model.ActiveTab == "admins")
        {
            int totalPages = (int)Math.Ceiling((double)Model.AdminTotalCount / Model.PageSize);

            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>نام</th>
                            <th>شماره موبایل</th>
                            <th>کد پرسنلی</th>
                            <th class="text-center">عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var a in Model.Admins)
                        {
                            <tr>
                                <td>@a.FirstName @a.LastName</td>
                                <td class="fw-bold">@a.PhoneNumber</td>
                                <td class="text-success fw-bold">@a.StaffCode</td>
                                <td class="text-center">
                                    <a asp-action="UpdateAdmin"
                                       asp-route-appUserId="@a.AppUserId"
                                       class="btn btn-sm btn-outline-primary">ویرایش</a>

                                    <a asp-action="ChangePassword"
                                       asp-route-appUserId="@a.AppUserId"
                                       class="btn btn-sm btn-outline-warning">تغییر رمز</a>

                                    <form asp-action="DeleteAdmin"
                                          asp-route-appUserId="@a.AppUserId"
                                          method="post"
                                          class="d-inline"
                                          onsubmit="return confirm('حذف انجام شود؟');">
                                        <button class="btn btn-sm btn-outline-danger">حذف</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @await Html.PartialAsync("_PaginationPartial", null, new ViewDataDictionary(ViewData)
            {
            ["TotalPages"] = totalPages,
                ["CurrentPage"] = Model.AdminPage,
                ["ParamName"] = "aPageNumber",
                ["Others"] = "&activeTab=admins"
                })
                }

    </div>
</div>
