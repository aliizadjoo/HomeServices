@using App.Domain.Core.Enums.ReviewAgg
@using App.EndPoints.MVC.HomeService.Areas.Admin.Models
@model ReviewListViewModel

@{
    ViewData["Title"] = "مدیریت نظرات";
}

<div class="container mt-5" dir="rtl">

    <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-3">
        <h4 class="fw-bold">
            <i class="bi bi-chat-square-quote ms-2 text-primary"></i>
            مدیریت نظرات و امتیازات
        </h4>
        <span class="badge bg-secondary">تعداد کل: @Model.TotalCount</span>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @foreach (var review in Model.Reviews)
    {
        <div class="card shadow-sm mb-4 border-0 p-3">

          
            <div class="d-flex justify-content-between align-items-center mb-3">

                <div class="fw-bold text-dark fs-5">
                    @review.CustomerFirstName @review.CustomerLastName
                    <span class="text-muted fw-normal small">(مشتری)</span>
                </div>

                <div class="d-flex align-items-center gap-2">
                    <span class="badge px-3 py-2 @GetStatusClass(review.ReviewStatus)">
                        @GetStatusName(review.ReviewStatus)
                    </span>

                    <div class="text-muted small">
                        <i class="bi bi-calendar-event me-1"></i>
                        <span class="convert-date">
                            @review.CreatedAt.ToString("yyyy-MM-dd")
                        </span>
                    </div>
                </div>
            </div>

            
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="text-primary small fw-bold">
                    <i class="bi bi-info-circle me-1"></i>
                    @review.OrderDescription
                </div>

                <div class="d-flex align-items-center">
                    <span class="small text-muted me-2">امتیاز:</span>
                    <div class="text-warning">
                        @for (int i = 1; i <= 5; i++)
                        {
                            <i class="bi @(i <= review.Score ? "bi-star-fill" : "bi-star")"></i>
                        }
                    </div>
                </div>
            </div>

        
            <div class="mb-4 text-dark fw-bold px-2"
                 style="font-size: 1.05rem; line-height: 1.8;">
                @review.Comment
            </div>

           
            <div class="d-flex justify-content-between align-items-end pt-3 border-top">

                <div class="d-flex gap-2">
                    @if (review.ReviewStatus == ReviewStatus.Pending)
                    {
                        <form asp-action="ChangeStatus" asp-route-id="@review.Id" asp-route-status="@ReviewStatus.Approved" method="post">
                            <button type="submit" class="btn btn-success btn-sm px-3 rounded-pill">
                                <i class="bi bi-check-lg"></i> تایید انتشار
                            </button>
                        </form>
                        <form asp-action="ChangeStatus" asp-route-id="@review.Id" asp-route-status="@ReviewStatus.Rejected" method="post">
                            <button type="submit" class="btn btn-danger btn-sm px-3 rounded-pill">
                                <i class="bi bi-x-lg"></i> رد نظر
                            </button>
                        </form>
                    }
                    else
                    {
                        <form asp-action="ChangeStatus" asp-route-id="@review.Id" asp-route-status="@ReviewStatus.Pending" method="post">
                            <button type="submit" class="btn btn-outline-warning btn-sm px-3 rounded-pill text-dark">
                                <i class="bi bi-arrow-counterclockwise"></i> بازگشت به در انتظار
                            </button>
                        </form>
                    }
                </div>

                <div class="bg-light rounded p-2 d-flex align-items-center border shadow-sm"
                     style="min-width: 180px;">
                    <div class="text-end me-3">
                        <div class="small text-muted" style="font-size: 0.7rem;">
                            متخصص اجرا کننده
                        </div>
                        <div class="fw-bold small text-primary">
                            @review.ExpertFirstName @review.ExpertLastName
                        </div>
                    </div>

                    <img src="/images/profiles/@review.ImagePathExpert"
                         class="rounded shadow-sm"
                         style="width: 48px; height: 48px; object-fit: cover;"
                         onerror="this.src='/images/default-avatar.png'" />
                </div>
            </div>
        </div>
    }

    @if (Model.TotalPages > 1)
    {
        <nav class="mt-5 pb-5">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-pageNumber="@(Model.CurrentPage - 1)">
                        قبلی
                    </a>
                </li>

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-pageNumber="@i">
                            @i
                        </a>
                    </li>
                }

                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-pageNumber="@(Model.CurrentPage + 1)">
                        بعدی
                    </a>
                </li>
            </ul>
        </nav>
    }
</div>

@section Scripts {
    <script src="~/js/date-converter.js"></script>
}

@functions {

    string GetStatusName(ReviewStatus status) => status switch
    {
        ReviewStatus.Pending => "در انتظار تایید",
        ReviewStatus.Approved => "تایید شده",
        ReviewStatus.Rejected => "رد شده",
        _ => "نامشخص"
    };

    string GetStatusClass(ReviewStatus status) => status switch
    {
        ReviewStatus.Pending => "bg-warning text-dark fw-bold",
        ReviewStatus.Approved => "bg-success",
        ReviewStatus.Rejected => "bg-danger",
        _ => "bg-secondary"
    };
}
