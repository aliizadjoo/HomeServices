@using App.EndPoints.MVC.HomeService.Areas.Admin.Models
@model HomeServiceListViewModel

<div class="container mt-4">

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4>مدیریت سرویس‌ها</h4>
        <a asp-action="Create" class="btn btn-success">افزودن سرویس جدید</a>
    </div>

    <table class="table table-bordered table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>تصویر</th>
                <th>نام سرویس</th>
                <th>دسته‌بندی</th>
                <th>قیمت پایه</th>
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Services)
            {
                <tr>
                    <td>
                        <img src="/images/services/@item.ImagePath" style="width: 50px; height: 50px; object-fit: cover;" class="rounded" />
                    </td>
                    <td>@item.Name</td>
                    <td><span class="badge bg-info text-dark">@item.CategoryName</span></td>
                    <td>@item.BasePrice.ToString("N0") ریال</td>
                    <td>
                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">ویرایش</a>
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('آیا از حذف این سرویس مطمئن هستید؟')">
                            <button type="submit" class="btn btn-sm btn-outline-danger">حذف</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <nav>
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@i">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>