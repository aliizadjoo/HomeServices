@using App.EndPoints.MVC.HomeService.Areas.Admin.Models
@model CreateHomeServiceViewModel

@{
    ViewData["Title"] = "افزودن سرویس جدید";
}

<div class="container mt-5">
    <div class="card shadow border-0">
        <div class="card-header bg-success text-white py-3">
            <h5 class="mb-0"><i class="bi bi-plus-circle me-2"></i>تعریف سرویس جدید</h5>
        </div>
        <div class="card-body p-4">
            <form asp-action="Create" method="post" enctype="multipart/form-data">

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label fw-bold"></label>
                        <input asp-for="Name" class="form-control" placeholder="مثال: نظافت منزل" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="CategoryId" class="form-label fw-bold"></label>
                        <select asp-for="CategoryId" class="form-select"
                                asp-items="@(new SelectList(Model.AvailableCategories, "Id", "Title"))">
                            <option value="">-- انتخاب دسته‌بندی --</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="BasePrice" class="form-label fw-bold"></label>
                        <div class="input-group">
                            <input asp-for="BasePrice" type="number" class="form-control" />
                            <span class="input-group-text">ریال</span>
                        </div>
                        <span asp-validation-for="BasePrice" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="ImageFile" class="form-label fw-bold"></label>
                        <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
                        <span asp-validation-for="ImageFile" class="text-danger small"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="Description" class="form-label fw-bold"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-4 pt-3 border-top">
                    <a asp-action="Index" class="btn btn-outline-secondary me-2">انصراف</a>
                    <button type="submit" class="btn btn-success px-5">ثبت سرویس</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}