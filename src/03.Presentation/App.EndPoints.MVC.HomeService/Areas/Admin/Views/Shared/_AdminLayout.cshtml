

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - پنل مدیریت</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" />
    <link rel="stylesheet" href="~/css/admin-theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    @await RenderSectionAsync("Head", required: false)
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-3 col-lg-2 d-md-block admin-sidebar collapse shadow">
                <div class="position-sticky pt-3">
                    <h5 class="text-center py-3 border-bottom border-light border-opacity-25">مدیریت خدمات منزل</h5>
                    <ul class="nav flex-column mt-2">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Panel" asp-action="Index">
                                <i class="bi bi-speedometer2 me-2"></i> داشبورد
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="User" asp-action="Index">
                                <i class="bi bi-people me-2"></i> مدیریت کاربران
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Service" asp-action="Index">
                                <i class="bi bi-tools me-2"></i> مدیریت سرویس‌ها
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Review" asp-action="Index">
                                <i class="bi bi-chat-dots me-2"></i> مدیریت نظرات
                            </a>
                        </li>

                        <hr class="text-white opacity-50" />

                        <li class="nav-item mt-2">
                            <a class="nav-link text-warning fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-box-arrow-right me-2"></i> برگشت به خانه
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <header class="admin-header d-flex justify-content-between align-items-center mb-4 py-3 bg-white border-bottom shadow-sm">
                    <h2 class="h4 mb-0 text-success">@ViewData["Title"]</h2>

                    <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-outline-success btn-sm">
                        <i class="bi bi-house-door"></i> صفحه اصلی
                    </a>
                </header>

                <div class="content-area bg-light p-4 rounded shadow-sm border">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>