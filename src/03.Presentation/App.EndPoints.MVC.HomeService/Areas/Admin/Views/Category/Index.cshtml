@using App.EndPoints.MVC.HomeService.Areas.Admin.Models
@model CategoryListViewModel

@{
    ViewData["Title"] = "مدیریت دسته‌بندی‌ها";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show border-0 shadow-sm" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-check-circle-fill me-2 fs-5"></i>
                        <div>@TempData["SuccessMessage"]</div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show border-0 shadow-sm" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-exclamation-triangle-fill me-2 fs-5"></i>
                        <div>@TempData["ErrorMessage"]</div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-bold text-primary">
            <i class="bi bi-grid-3x3-gap-fill me-2"></i>مدیریت دسته‌بندی‌ها
        </h4>
        <a asp-action="Create" class="btn btn-success px-4 shadow-sm">
            <i class="bi bi-plus-lg me-1"></i> افزودن دسته‌بندی جدید
        </a>
    </div>

    <div class="card shadow-sm border-0 rounded-3 overflow-hidden">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4" style="width: 100px;">تصویر</th>
                        <th>عنوان دسته‌بندی</th>
                        <th class="text-center" style="width: 200px;">عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Categories.Any())
                    {
                        @foreach (var item in Model.Categories)
                        {
                            <tr>
                                <td class="ps-4">
                                    <img src="/images/categories/@item.ImagePath"
                                         class="rounded-circle border"
                                         style="width: 45px; height: 45px; object-fit: cover;"
                                         alt="@item.Title" />
                                </td>
                                <td>
                                    <span class="fw-bold text-dark">@item.Title</span>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group gap-2">
                                        <a asp-action="Update" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-primary rounded-2"
                                           title="ویرایش">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@item.Id" method="post"
                                              onsubmit="return confirm('آیا از حذف دسته‌بندی «@item.Title» مطمئن هستید؟')"
                                              class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-danger rounded-2" title="حذف">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-center py-5">
                                <p class="text-muted mb-0">هیچ موردی برای نمایش یافت نشد.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @if (Model.TotalPages > 1)
    {
        <nav class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link shadow-sm" asp-action="Index" asp-route-pageNumber="@(Model.CurrentPage - 1)">
                        <i class="bi bi-chevron-right small"></i> قبلی
                    </a>
                </li>

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                        <a class="page-link shadow-sm" asp-action="Index" asp-route-pageNumber="@i">@i</a>
                    </li>
                }

                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link shadow-sm" asp-action="Index" asp-route-pageNumber="@(Model.CurrentPage + 1)">
                        بعدی <i class="bi bi-chevron-left small"></i>
                    </a>
                </li>
            </ul>
        </nav>
    }
</div>