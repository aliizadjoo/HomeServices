@using App.Domain.Core.Dtos.ExpertAgg
@model ProfileExpertDto
@{
    ViewData["Title"] = "پروفایل متخصص";
}

<div class="container mt-5">

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm border-0 profile-card text-center p-4 mb-4">
                <div class="mb-3">
                    @if (!string.IsNullOrEmpty(Model.ImagePath))
                    {
                    
                        <img src="/images/Experts/@Model.ImagePath" alt="Profile" class="rounded-circle img-thumbnail" style="width: 150px; height: 150px; object-fit: cover;" />
                    }
                    else
                    {
                        <img src="/images/default-expert.png" class="rounded-circle img-thumbnail" style="width: 150px; height: 150px;" />
                    }
                </div>
                <h4 class="font-weight-bold">@Model.FirstName @Model.LastName</h4>
                <p class="text-muted">متخصص در شهر: @Model.CityName</p>

                <hr />

                <div class="bg-light p-3 rounded shadow-sm">
                    <span class="d-block text-secondary small">موجودی کیف پول </span>
                    <h5 class="text-success mt-1 font-weight-bold">
                        @(Model.WalletBalance?.ToString("N0") ?? "0") ریال
                    </h5>
                </div>

                <div class="mt-4">
                    <a asp-action="Edit" class="btn btn-outline-success btn-block">ویرایش پروفایل</a>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow-sm border-0 p-4 mb-4">
                <h5 class="border-bottom pb-2 text-success">درباره من (Bio)</h5>
                <p class="mt-3 text-justify" style="line-height: 1.8;">
                    @(string.IsNullOrEmpty(Model.Bio) ? "توضیحاتی ثبت نشده است." : Model.Bio)
                </p>
            </div>

            <div class="card shadow-sm border-0 p-4">
                <h5 class="border-bottom pb-2 text-success">مهارت‌ها و خدمات </h5>
                <div class="mt-3">
                    @if (Model.HomeServices != null && Model.HomeServices.Any())
                    {
                        foreach (var service in Model.HomeServices)
                        {
                            <span class="badge bg-success text-white p-2 m-1" style="font-size: 0.9rem; font-weight: normal;">
                                <i class="fa fa-check-circle ml-1"></i> @service
                            </span>
                        }
                    }
                    else
                    {
                        <p class="text-muted">هنوز خدمتی برای شما ثبت نشده است.</p>
                    }
                </div>
            </div>
                
            </div>
        </div>
    </div>
</div>