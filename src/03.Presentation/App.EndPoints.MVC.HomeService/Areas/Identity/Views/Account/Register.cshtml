@using App.EndPoints.MVC.HomeService.Areas.Identity.Models
@model RegisterViewModel

@{
    ViewData["Title"] = "ثبت‌نام کاربر جدید";
}

<div class="container mt-4 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow border-0">
                <div class="card-header bg-success text-white text-center py-3">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                    <p class="small mb-0">اطلاعات خود را برای عضویت در سامانه وارد کنید</p>
                </div>
                <div class="card-body p-4">
                    <form asp-area="Identity" asp-controller="Account" asp-action="Register" method="post">

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3 py-2 small"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FirstName" class="form-label"></label>
                                <input asp-for="FirstName" class="form-control" placeholder="مثلاً: علی" />
                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="LastName" class="form-label"></label>
                                <input asp-for="LastName" class="form-control" placeholder="مثلاً: علوی" />
                                <span asp-validation-for="LastName" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Role" class="form-label"></label>
                            <select asp-for="Role" class="form-select">
                                <option value="" selected disabled>نوع کاربری خود را انتخاب کنید...</option>
                                <option value="Customer">مشتری (درخواست‌دهنده خدمت)</option>
                                <option value="Expert">کارشناس (ارائه‌دهنده خدمت)</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger small"></span>
                        </div>

                        <hr class="my-4 text-secondary">

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Password" class="form-label"></label>
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ConfirmPassword" class="form-label"></label>
                                <input asp-for="ConfirmPassword" class="form-control" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-success btn-lg">تکمیل ثبت‌نام</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer bg-light text-center py-3">
                    <span class="text-muted">قبلاً ثبت‌نام کرده‌اید؟</span>
                    <a asp-action="Login" class="text-decoration-none fw-bold">ورود به حساب</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}