@using App.Domain.Core.Dtos.AccountAgg
@model UserLoginDto

@{
    ViewData["Title"] = "ورود به حساب کاربری";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h4>@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <form asp-area="Identity" asp-controller="Account" asp-action="Login" method="post">

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="UserName" class="form-label">ایمیل</label>
                            <input asp-for="UserName" class="form-control" placeholder="example@email.com" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">رمز عبور</label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label">مرا به خاطر بسپار</label>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">ورود به سایت</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <small>هنوز ثبت‌نام نکرده‌اید؟ <a href="#">ثبت‌نام مشتری</a> | <a href="#">ثبت‌نام کارشناس</a></small>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}